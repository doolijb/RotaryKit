{
	"files.autoSave": "onFocusChange",
	"workbench.editor.labelFormat": "short",
	"explorer.sortOrder": "filesFirst",
	"explorer.compactFolders": false,
	"createTests.testDirectoryName": "",
	"createTests.template.default": [
		"import { expect, test } from \"vitest\"",
		"import ${moduleName} from \".\"",
		"",
		"test(\"${moduleName} test passes\", async () => {",
		"    expect(false).toBe(true) // TODO",
		"})",
		"",
		"test(\"${moduleName} test fails\", async () => {",
		"    expect(false).toBe(true) // TODO",
		"})"
	],
	"editor.formatOnSave": false,
	"prettier.enable": true,
	"cSpell.words": [
		"akar",
		"apexcharts",
		"autodocs",
		"autohide",
		"Bindables",
		"charsets",
		"createdb",
		"datetime",
		"deepmerge",
		"flac",
		"hardikmodha",
		"hoverable",
		"iconify",
		"ilike",
		"jacksparrow",
		"libphonenumber",
		"maildev",
		"nonpositive",
		"ondelete",
		"onedit",
		"onview",
		"paseto",
		"pdfs",
		"pgtools",
		"pino",
		"rvest",
		"skeletonlabs",
		"Swapy",
		"tailwindcss",
		"trcp",
		"trpc",
		"uuidv"
	],
	"search.exclude": {
		"**/*.svelte-kit": true
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"html.format.indentHandlebars": true
}
