{
    "useTabs": true,
    "singleQuote": false,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": ["prettier-plugin-svelte"],
    "pluginSearchDirs": ["."],
    "overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte", "removeUnusedImports": false } },
		{ "files": "*.ts", "options": { "removeUnusedImports": false } }
	],
    "semi": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": false,
        "source.fixAll.eslint": true
    }
}